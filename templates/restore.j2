#!/bin/bash

# This file was generated by Ansible for {{ ansible_fqdn }}
# Do NOT modify this file by hand!

WORKDIR={{backup.work}}/{{item.name}}

{% if item.source.startswith('postgresql://') %}

DBNAME={{item.source.split('postgresql://')[-1]}}
psql -U {{postgres.postgres_user}} {{ '-h ' + postgres.postgres_host  if postgres.postgres_host else ''}} {{ ('-p %s' % postgres.postgres_port)  if postgres.postgres_port else ''}} $DBNAME < $WORKDIR/dump
rm -rf $WORKDIR/dump

{% elif item.source.startswith('mysql://') %}

{% if item.source == 'mysql://' %}
# Restore all databases
mysql -u {{mysql.mysql_user}} -p{{mysql.mysql_pass}} < ${WORKDIR}/dump
{% else %}
# Restore the passed database
DBNAME={{item.source.split('mysql://')[-1]}}
mysql -u {{mysql.mysql_user}} -p{{mysql.mysql_pass}} $DBNAME  < ${WORKDIR}/dump
rm -rf $WORKDIR/dump
{% endif %}

{% elif item.source.startswith('mongo://') %}

mongorestore --drop $WORKDIR/dump
rm -rf $WORKDIR/dump

{% endif %}
